{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "overrides": [
    {
      "files": ["**/*.test?(.*).ts", "**/*.test?(.*).tsx"],
      "env": {
        "jest": true
      },
      "globals": {
        "page": true,
        "browser": true,
        "context": true,
        "jestPuppeteer": true
      },
      "plugins": ["jest"]
    }
  ]
}
